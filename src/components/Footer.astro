---
import { Icon } from "astro-icon";
const links = [
  {
    url: "/",
    description: "Google DSC's official website",
    icon: "mdi:home",
  },
  {
    url: "https://github.com/GDSC-SJEC",
    description: "Our GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.instagram.com/gdsc.sjec",
    description: "Our Instagram",
    icon: "mdi:instagram"
  },
  {
    url: "https://www.linkedin.com/company/gdsc-sjec/",
    description: "Our Linked-In",
    icon: "mdi:linkedin"
  }
];
const today = new Date();
---

<footer>
    <div class="relative flex items-center justify-center h-60">
    <div class="absolute inset-0 overflow-hidden opacity-40">
    </div>
    <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
      {
        links.map((link) => (
          <li>
            <a
              class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
              href={link.url}
            >
              <span class="sr-only">{link.description}</span>
              <Icon class="h-full" name={link.icon} />
            </a>
          </li>
        ))
      }
    </ul>
    </div>
  </footer>
